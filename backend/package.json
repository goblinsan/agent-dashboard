{
  "name": "ai-agent-dashboard-backend",
  "version": "0.5.0",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "scan": "npm audit --omit=dev || true",
    "scan:json": "node scripts/dependency-scan.cjs",
    "lint:openapi": "npx spectral lint openapi.yaml",
    "openapi:publish": "node scripts/publish-openapi.cjs",
    "migrate": "node scripts/migrate.cjs",
    "migrate:if-present": "node scripts/migrate-if-present.cjs",
    "dev:sqlite": "cross-env PERSISTENCE=sqlite npm run migrate && cross-env PERSISTENCE=sqlite npm run dev",
    "ci:verify": "npm run build && npm run test && npm run lint:openapi && npm run openapi:publish && npm run scan:json && npm run migrate:if-present",
    "data:export": "node scripts/export-data.cjs",
    "data:import": "node scripts/import-data.cjs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "nanoid": "^4.0.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.4.0"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.11.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "license": "Apache-2.0"
}
